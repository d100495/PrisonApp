@model PrisonApp.Models.ViewModels.PrzydzialyViewModel

@{
    ViewBag.Title = "PrzydzielWieznia";
}


<html>

<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Przenieś więźnia</title>
</head>

<body>


<h2>Przenieś więźnia</h2>

<div class="row">
    <div class="col-md-8">

        @using (Html.BeginForm("PrzeniesWieznia", "Zmiany", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            <h4> Przenieś więźnia do innej celi.</h4>
            <hr/>


            @Html.HiddenFor(x => x.idWieznia)
            @Html.HiddenFor(model => model.Plec)


            <div class="form-group">
                @Html.LabelFor(x => x.FK_idCeli, new {@class = "col-md-2 control-label"})

                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.FK_idCeli, ViewBag.CelList as SelectList, new {@class = "form-control"})
                    @Html.ValidationMessageFor(x => x.FK_idCeli, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Przenieś" class="btn btn-default"/>
                </div>
            </div>
        }

    </div>
</div>


</body>
</html>