@{

    var cLayout = "";

    if (User.IsInRole("Admin"))
    {
        cLayout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    else if (User.IsInRole("Worker"))
    {
        cLayout = "~/Views/Shared/_WorkerLayout.cshtml";
    }


    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }


    Layout = cLayout;
}