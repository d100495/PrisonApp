@model PrisonApplication.Models.ViewModels.AllocationViewModel

@{
    ViewBag.Title = "AllocatePrisoner";
}

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllocatePrisoner</title>
</head>

<body>

    <h2>AllocatePrisoner</h2>
    <div class="row">
        <div class="col-md-8">

            @using (Html.BeginForm("AllocatePrisoner", "Prisoners", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>Przydziel więźnia do celi.</h4>
                <hr />

                @Html.HiddenFor(x => x.Prisoner_Id)

                <div class="form-group">
                    @Html.LabelFor(x => x.Prisoner_Id, "Id Prisoner: ", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10IdDisplay">
                        @Html.DisplayFor(x => x.Prisoner_Id)
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(x => x.Cell_Id, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.Cell_Id, ViewBag.CelList as SelectList, "Choose ...", new { @class = "form-control" })
                    </div>
                </div>


                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Allocate" class="btn btn-default" />
                    </div>
                </div>
            }

        </div>

    </div>


</body>
</html>